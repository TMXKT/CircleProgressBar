<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.example.circleprogressbar.CircleProgressBar
            android:id="@+id/cpbView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:cpb_circle_bg_color="#E7E7E7"
            app:cpb_circle_color="#5491FF"
            app:cpb_circle_width="15dp"
            app:cpb_progress="20"
            app:cpb_text_color="#5491FF"
            app:cpb_text_size="30sp"
            app:cpb_text_style="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="#EFD3D3"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.circleprogressbar.CircleProgressBar
            android:id="@+id/cpbView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="#ffffff"
            app:cpb_circle_bg_color="#E7E7E7"
            app:cpb_circle_color="#FF8832"
            app:cpb_circle_width="5dp"
            app:cpb_is_ring="false"
            app:cpb_progress="6"
            app:cpb_text_color="#DD1515"
            app:cpb_text_size="40sp"
            app:cpb_text_style="bold" />

        <com.example.circleprogressbar.CircleProgressBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="#ffffff"
            app:cpb_circle_bg_color="#E7E7E7"
            app:cpb_circle_color="#FF8832"
            app:cpb_circle_width="10dp"
            app:cpb_progress="89"
            app:cpb_text_color="#DD1515"
            app:cpb_text_size="12sp"
            app:cpb_text_style="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:background="#EFD3D3"
        android:gravity="top"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <com.example.circleprogressbar.CircleProgressBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="2"
                android:background="#ffffff"
                app:cpb_circle_bg_color="#79EC14"
                app:cpb_circle_color="#4A96E8"
                app:cpb_circle_width="12dp"
                app:cpb_is_ring="false"
                app:cpb_progress="90.6"
                app:cpb_text_color="#BA1E65"
                app:cpb_text_size="18sp"
                app:cpb_text_style="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <com.example.circleprogressbar.CircleProgressBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="2"
                android:background="#ffffff"
                app:cpb_circle_bg_color="#E7E7E7"
                app:cpb_circle_color="#FF8832"
                app:cpb_circle_width="12dp"
                app:cpb_progress="66.6"
                app:cpb_text_color="#DD1515"
                app:cpb_text_size="18sp"
                app:cpb_text_style="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <com.example.circleprogressbar.CircleProgressBar
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="#ffffff"
                app:cpb_circle_bg_color="#E7E7E7"
                app:cpb_circle_color="#FF8832"
                app:cpb_circle_width="12dp"
                app:cpb_is_ring="false"
                app:cpb_progress="49"
                app:cpb_text_color="#DD1515"
                app:cpb_text_size="18sp"
                app:cpb_text_style="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>